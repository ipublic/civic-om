<% title "Data Sources" %>
<div class="row">
	<div class="four columns">
		<h3><%= @data_source.label %></h3>
	</div>
	<div class="one column">
    <%= link_to "Edit", edit_admin_data_source_path(authority, @data_source), :class => "nice medium radius blue button" %>
	</div>
	<div class="three columns">
    <%= link_to "List Data Sources", admin_data_sources_path, :class => "nice medium radius blue button" %>
	</div>
</div>
<div class="row">
	<div class="ten columns">
		<ul>
			<li><strong><%= @data_source.label %></strong></li>
			<li>Term: <strong><%= @data_source.term %></strong></li>
			<li>Comment: <strong><%= @data_source.comment %></strong></li>
		</ul>
	</div>
</div>