<% title "Topics" %>
<div class="row">
	<div class="three columns">
		<h3>Add Topic</h3>
	</div>
	<div class="three columns">
	  <%= link_to "List Topics", admin_topics_path(authority, @topic), :class => "nice medium radius blue button" %>
	</div>
</div>
<div id="forms">
  <%= form_for :topic, :url => admin_topics_path do |f| %>
  	<%= render :partial => 'form', :locals=> {:f=>f} %>
  <% end %>
</div>
