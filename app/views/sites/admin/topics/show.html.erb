<% title "Topics" %>
<div class="row">
	<div class="four columns">
		<h3><%= @topic.label %></h3>
	</div>
	<div class="one column">
    <%= link_to "Edit", edit_admin_topic_path(authority, @topic), :class => "nice medium radius blue button" %>
	</div>
	<div class="three columns">
    <%= link_to "List Topics", admin_topics_path, :class => "nice medium radius blue button" %>
	</div>
</div>
<div class="row">
	<div class="ten columns">
		<ul>
			<li><strong><%= @topic.label %></strong></li>
			<li>Term: <strong><%= @topic.term %></strong></li>
			<li>Comment: <strong><%= @topic.comment %></strong></li>
		</ul>
	</div>
</div>