<div class="row dashboard-measure-group">
	<div class="row">
		<div class="four columns">
	    <label>Group title</label>
	    <input name="dashboard[groups][][title]" type="text" class='input-text medium'><%= group.title %></input>
		</div>
		<div class="four columns">
	    <label>Description</label>
	    <textarea name="dashboard[groups][][description]" rows="2" class="text-area large"><%= group.description %></textarea>
		</div>
	</div>

  <fieldset>
    <legend>Measures</legend>
    <% for measure in group.measures %>
    	<%= render :partial=>'form_measure', :locals=>{:measure=>measure} %>
    <% end %>
    <a href="#" class="add-measure add-element">Add Measure</a>
  </fieldset>

	<div class="row">
		<a href="#" class="delete-dashboard-group delete-element">Delete Group</a>
	</div>
</div>