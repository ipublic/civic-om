<% title "Sign in" %>
<div class="row">
	<div class="seven columns">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "nice") do |f| %>
			<fieldset>
				<h5>Sign in</h5>
				<div class="row">
				  <%= f.label :email %> <%= f.email_field :email, :class=>"input-text large oversize" %>
				</div>
				<div class="row">
				  <%= f.label :password %> <%= f.password_field :password, :class=>"input-text large oversize" %>
				</div>
			  <% if devise_mapping.rememberable? -%>
					<div class="row">
						<%= content_tag_for(:label, resource, :for => "user_remember_me") do %>
							<%= f.check_box :remember_me %> <%= "Remember me" %><br/><br/>
						<% end -%>
					</div>
			  <% end -%>

				<div class="row">
				  <%= f.submit "Sign in", :class => "nice large radius blue button" %>
				</div>

				</fieldset>
			<% end %>

			<%= render :partial => "devise/shared/links" %>
	</div>
</div>